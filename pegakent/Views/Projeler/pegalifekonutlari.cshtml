            const sliderDotsContainer = document.querySelector('.slider-dots');

            const totalImages = sliderImages.length;
            let currentIndex = 0;
            let autoplayInterval;

            // Dot'ları oluştur
            for (let i = 0; i < totalImages; i++) {
                const dot = document.createElement('span');
                dot.classList.add('dot');
                dot.dataset.index = i;
                sliderDotsContainer.appendChild(dot);
                dot.addEventListener('click', () => {
                    goToSlide(parseInt(dot.dataset.index));
                    resetAutoplay();
                });
            }

            const dots = document.querySelectorAll('.dot');

            // Belirli bir slayta git
            function goToSlide(index) {
                if (index < 0) {
                    currentIndex = totalImages - 1; // Başa dön
                } else if (index >= totalImages) {
                    currentIndex = 0; // Sona git
                } else {
                    currentIndex = index;
                }

                const offset = -currentIndex * 100; // %100 kaydır
                sliderWrapper.style.transform = `translateX(${offset}%)`;
                updateDots();
            }

            // Dotları güncelle
            function updateDots() {
                dots.forEach((dot, index) => {
                    if (index === currentIndex) {
                        dot.classList.add('active');
                    } else {
                        dot.classList.remove('active');
                    }
                });
            }

            // Sonraki slayt
            function nextSlide() {
                goToSlide(currentIndex + 1);
            }

            // Önceki slayt
            function prevSlide() {
                goToSlide(currentIndex - 1);
            }

            // Otomatik oynatmayı başlat
            function startAutoplay() {
                autoplayInterval = setInterval(nextSlide, 3500); // 3.5 saniye aralıklarla
            }

            // Otomatik oynatmayı sıfırla (kullanıcı etkileşimi sonrası)
            function resetAutoplay() {
                clearInterval(autoplayInterval);
                startAutoplay();
            }

            // Buton olay dinleyicileri
            nextButton.addEventListener('click', () => {
                nextSlide();
                resetAutoplay();
            });

            prevButton.addEventListener('click', () => {
                prevSlide();
                resetAutoplay();
            });

            // İlk slaytı göster ve otomatik oynatmayı başlat
            goToSlide(0);
            startAutoplay();

            // Opsiyonel: Kullanıcı sekme değiştirdiğinde otomatik oynatmayı durdur/devam ettir
            document.addEventListener('visibilitychange', () => {
                if (document.hidden) {
                    clearInterval(autoplayInterval);
                } else {
                    startAutoplay();
                }
            });
        });
    </script>
}